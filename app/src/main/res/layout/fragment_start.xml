<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.vigie.view.StartFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Profile:"
                    android:id="@+id/mProfileSpinnerLabel"
                    android:textColor="@color/greenTheme"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="20dp"
                    android:textSize="16dp" />

                <Spinner
                    android:theme="@style/customSpinnerTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileSpinner"
                    android:layout_alignParentTop="true"
                    android:spinnerMode="dialog"
                    android:dropDownWidth="fill_parent"
                    android:minHeight="40dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:dropDownSelector="@color/greenTheme"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/mProfileSpinnerLabel"
                    android:layout_toEndOf="@+id/mProfileSpinnerLabel" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="48dp"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="SAMPLING"
                            android:id="@+id/mSamplingLabel"
                            android:textColor="@color/greenTheme"
                            android:paddingTop="10dp"
                            android:textSize="16dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/samplingInput"
                            android:layout_below="@+id/mSamplingLabel"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/brandGreen"
                            android:singleLine="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="min"
                            android:id="@+id/textView11"
                            android:layout_alignBottom="@+id/samplingInput"
                            android:layout_toRightOf="@+id/samplingInput"
                            android:layout_toEndOf="@+id/samplingInput"
                            android:textColor="#bbb"
                            android:textSize="12dp"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView8"
                            android:cropToPadding="false"
                            android:src="@drawable/clock"
                            android:layout_alignBottom="@+id/textView11"
                            android:layout_toRightOf="@+id/textView11"
                            android:layout_toEndOf="@+id/textView11"
                            android:layout_marginLeft="5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView9"
                            android:src="@drawable/record_min" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Min"
                            android:id="@+id/mMinStartLabel"
                            android:textAlignment="center"
                            android:layout_alignTop="@+id/imageView9"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="2dp"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:width="50dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Not Ok"
                            android:id="@+id/mMinNOkLabel"
                            android:textAlignment="center"
                            android:layout_alignTop="@+id/mMinStartLabel"
                            android:layout_alignRight="@+id/imageView9"
                            android:layout_alignEnd="@+id/imageView9"
                            android:layout_marginTop="2dp"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:width="50dp"
                            android:gravity="center"
                            android:layout_marginRight="27dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/minInput"
                            android:layout_below="@+id/mMinNOkLabel"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:width="80dp"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:singleLine="true"
                            android:layout_marginTop="4dp"
                            android:gravity="center" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/minNOkInput"
                            android:width="80dp"
                            android:layout_alignTop="@+id/minInput"
                            android:layout_alignRight="@+id/imageView9"
                            android:layout_alignEnd="@+id/imageView9"
                            android:layout_marginRight="20dp"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:singleLine="true"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="ºC"
                            android:id="@+id/textView8"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_toRightOf="@+id/minInput"
                            android:layout_toEndOf="@+id/minInput"
                            android:layout_alignBottom="@+id/minInput" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="min"
                            android:id="@+id/textView10"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignRight="@+id/imageView9"
                            android:layout_alignEnd="@+id/imageView9"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="After"
                            android:id="@+id/mMinAfterLabel"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:layout_alignTop="@+id/mMinStartLabel"
                            android:layout_alignLeft="@+id/mMinNOkLabel"
                            android:layout_alignStart="@+id/mMinNOkLabel"
                            android:layout_marginTop="12dp"
                            android:width="50dp"
                            android:gravity="center" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView10"
                            android:src="@drawable/record_max" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Max"
                            android:id="@+id/mMaxStartLabel"
                            android:textAlignment="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="2dp"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:width="50dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Not Ok"
                            android:id="@+id/mMaxNOkLabel"
                            android:textAlignment="center"
                            android:layout_marginRight="27dp"
                            android:layout_alignTop="@+id/mMaxStartLabel"
                            android:layout_alignRight="@+id/imageView10"
                            android:layout_alignEnd="@+id/imageView10"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:layout_marginTop="2dp"
                            android:width="50dp"
                            android:gravity="center" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/maxInput"
                            android:width="80dp"
                            android:layout_below="@+id/mMaxStartLabel"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:singleLine="true"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/maxNOkInput"
                            android:width="80dp"
                            android:layout_alignTop="@+id/maxInput"
                            android:layout_alignRight="@+id/imageView10"
                            android:layout_alignEnd="@+id/imageView10"
                            android:layout_marginRight="20dp"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:singleLine="true"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="ºC"
                            android:id="@+id/textView16"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_alignBottom="@+id/maxInput"
                            android:layout_toRightOf="@+id/maxInput"
                            android:layout_toEndOf="@+id/maxInput" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="min"
                            android:id="@+id/textView17"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:layout_alignTop="@+id/textView16"
                            android:layout_alignRight="@+id/imageView10"
                            android:layout_alignEnd="@+id/imageView10"
                            android:layout_marginRight="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="After"
                            android:id="@+id/mMaxAfterLabel"
                            android:textAlignment="center"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="27dp"
                            android:layout_alignTop="@+id/mMaxStartLabel"
                            android:layout_alignRight="@+id/imageView10"
                            android:layout_alignEnd="@+id/imageView10"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:layout_marginTop="12dp"
                            android:width="50dp"
                            android:gravity="center" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/startByBtn"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/mStartByPushingLabel"
                    android:layout_toEndOf="@+id/mStartByPushingLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="START BY PUSHING BUTTON"
                    android:id="@+id/mStartByPushingLabel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/greenTheme"
                    android:width="130dp"
                    android:textSize="11dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/mStartByPushingLabel"
                    android:layout_toRightOf="@+id/startByBtn"
                    android:layout_toEndOf="@+id/startByBtn">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/saveButton"
                        android:layout_toRightOf="@+id/startByBtn"
                        android:layout_toEndOf="@+id/startByBtn"
                        android:background="@drawable/custom_save_profile_btn"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="SAVE PROFILE"
                        android:id="@+id/mSaveProfileBtnlabel"
                        android:textColor="#fff"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="0dp"
                android:background="#fff"
                android:touchscreenBlocksFocus="false"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goButton"
                    android:background="@drawable/custom_img_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="GO"
                    android:id="@+id/mGoBtnLabel"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
